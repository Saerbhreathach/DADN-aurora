			<stat name="fell power:count" value="5" level="6" bonus="base" />
			<stat name="fell power:count" value="6" level="8" bonus="base" />
			<stat name="fell power:count" value="7" level="10" bonus="base" />
			<stat name="fell power:count" value="8" level="13" bonus="base" />
